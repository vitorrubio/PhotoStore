@model PhotoStore.Core.Model.TipoProduto

@{
    ViewBag.Title = "Cadastro de Tipo de Produto";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Tipo de Produto</h2>




@using (Html.BeginForm("Editar", "TipoProduto", new { Area = "Admin" }, FormMethod.Post ))
{
    @Html.AntiForgeryToken()

    <div>
        <div class="text-right">
            @Html.ActionLink("Voltar à lista", "Index", null, new { @class = "btn btn-primary", role = "button" })
        </div>
    </div>

    <div class="container-fluid bordered spacer">

        <div class="form-horizontal">
            <fieldset>
                @Html.ValidationSummary(true, "Erros encontrados", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.Id)

                <div class="form-group">

                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-form-label", required="required" })
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })


                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    <div class="invalid-feedback">
                        Digite o nome
                    </div>

                </div>

                <div class="form-group">

                        @Html.LabelFor(model => model.PrecoSugerido, htmlAttributes: new { @class = "col-form-label" })
                        @Html.TextBoxFor(model => model.PrecoSugerido, new { @class = "form-control vtr_money" })


                    @Html.ValidationMessageFor(model => model.PrecoSugerido, "", new { @class = "text-danger" })

                </div>


                <div class="form-group">

                        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-form-label" })
                        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })


                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })

                </div>


                <div class="form-group  text-right">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>

            </fieldset>



        </div>
    </div>


}