@model IEnumerable<PhotoStore.Core.Model.TipoProduto>

@{
    ViewBag.Title = "Tipos de Produtos";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tipos de Produtos</h2>


<div class="row" id="divBotoes">
    <div class="col-sm-12 text-right">
        @Html.ActionLink("Criar", "Editar", null, new { @class = "btn btn-primary", role="button" })
    </div>
</div>

<div class="sp-vertical">
    <table id="tblLista" class="table table-striped table-bordered vtr_grid">

        <thead>
            <tr>
                <th class="controles">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th class="controles">
                    @Html.DisplayNameFor(model => model.PrecoSugerido)
                </th>
                <th class="controles text-center"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></th>
                <th class="controles text-center"><i class="fa fa-trash-o" aria-hidden="true"></i></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecoSugerido)
                    </td>
                    <td class="text-center">
                        <a href="@(Url.Action("Editar", "TipoProduto", new { id = item.Id}))"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    </td>
                    <td class="text-center">
                        <a href="@(Url.Action("Delete", "TipoProduto", new { id = item.Id}))"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>