@model PhotoStore.ViewModel.FotoViewModel

@{
    ViewBag.Title = "Detalhes Foto";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Foto</h2>

<h3>Você tem certeza que deseja excluir?</h3>
<div>
    <h4>Foto @Model.Nome</h4>
    <hr />
    <img src='@Model.ArquivoFoto.Base64SourceString' />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Evento.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Evento.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomeArquivo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomeArquivo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Numero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Numero)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-primary", role = "button" })
        </div>
    }
</div>