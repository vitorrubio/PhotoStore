@model PhotoStore.ViewModel.FotoViewModel

@{
    ViewBag.Title = "Detalhes Foto";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes da Foto</h2>

<div>
    <h4>Foto @Model.Nome</h4>
    <hr />
    <img src='@Model.ArquivoFoto.Base64SourceString' width="450"/>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Evento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Evento.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomeArquivo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeArquivo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Numero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Numero)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-primary", role = "button" })
        </div>
    }
</div>